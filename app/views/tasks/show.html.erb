<h1><%= @task.title %></h1>
<%= link_to 'edit this task', edit_task_path(@task) %>
<p><%= @task.details %></p>

<p><% if @task.completed == true %>
    <i class="far fa-check-square"></i> This task is completed
    <% else %>
    <i class="far fa-square"></i> This task is not completed yet
  <% end %></p>

<%= link_to 'Back to List', tasks_path %>
