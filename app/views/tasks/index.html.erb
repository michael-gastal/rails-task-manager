<h1>My Tasks</h1>

<% @tasks.each do |task| %>
  <p><% if task.completed == true %>
    <i class="far fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
  <% end %> <%= link_to task.title, task_path(task) %> | <%= link_to 'Delete', task_path(task), method: :delete, data: { confirm: "Delete #{task.title}?"} %></p>
<% end %>

<%= link_to 'Add a new Task', new_task_path %>
